# Osmo Resource Pages - Basic Configuration
# Simplified .htaccess to avoid server compatibility issues

# Basic CORS Headers (if mod_headers is available)
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS"
    Header set Access-Control-Allow-Headers "Content-Type"
</IfModule>

# Basic Gzip Compression (if mod_deflate is available)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript
</IfModule>

# Basic URL Rewriting (if mod_rewrite is available)
<IfModule mod_rewrite.c>
    RewriteEngine On
    # Only redirect missing assets, don't interfere with existing files
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} \.(png|jpg|jpeg|gif|ico|svg)$ [NC]
    RewriteRule ^(.*)$ - [R=404,L]
</IfModule>
